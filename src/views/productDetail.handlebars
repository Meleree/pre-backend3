<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{product.title}}</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <nav class="navbar">
    <ul class="nav-links">
      <li><a href="/" class="btn-header">Inicio</a></li>
      <li><a href="/products" class="btn-header">‚Üê Volver a productos</a></li>
      <li><a href="/carts" class="cart-btn">üõí Carrito</a></li>
    </ul>
  </nav>

  <main class="dashboard">
    <div class="product-card">
      <div class="product-image-container">
        <img 
          src="{{#if product.thumbnail}}{{product.thumbnail}}{{else}}/img/default-placeholder.png{{/if}}" 
          alt="{{product.title}}" 
          class="product-image"
        >
      </div>
      <h2 class="product-title">{{product.title}}</h2>
      <p>{{product.description}}</p>
      <p><strong>Categor√≠a:</strong> {{product.category}}</p>
      <p class="product-price">$ {{product.price}}</p>

      <button id="add-to-cart-btn" data-id="{{product._id}}" class="btn">
        Agregar al carrito üõí
      </button>
    </div>
  </main>

  <script>
    // PROTECCI√ìN GLOBAL para evitar doble notificaci√≥n de sesi√≥n
    if (!window.__SESSION_ALERT_SHOWN__) window.__SESSION_ALERT_SHOWN__ = false;

    document.addEventListener("DOMContentLoaded", () => {
      console.log("=== Script de agregar al carrito cargado ===");
      if (typeof getEventListeners !== "undefined") {
        const btn = document.getElementById("add-to-cart-btn");
        if (btn) {
          const listeners = getEventListeners(btn);
          console.log(`DEBUG: Bot√≥n ${btn.dataset.id}:`, listeners && listeners.click ? listeners.click.length + ' handlers' : 'sin handlers');
        }
      } else {
        console.log("DEBUG: getEventListeners no est√° disponible en este navegador.");
      }

      const addToCartButton = document.getElementById("add-to-cart-btn");
      if (!addToCartButton) return;

      addToCartButton.addEventListener("click", async () => {
        if (window.__SESSION_ALERT_SHOWN__) return;

        const productId = addToCartButton.dataset.id;
        console.log("[CLICK] add-to-cart para producto", productId);
        try {
          let cartId = localStorage.getItem("cartId");
          let showedAuthError = false;

          if (!cartId) {
            console.log("[FETCH] Creando carrito...");
            const response = await fetch("/api/carts", { 
              method: "POST", 
              headers: { "Content-Type": "application/json" }, 
              credentials: "include"
            });
            let data = {};
            try { data = await response.json(); } catch {}
            if (response.status === 401 || (data.message && data.message.toLowerCase().includes("iniciar sesi√≥n"))) {
              if (!window.__SESSION_ALERT_SHOWN__) {
                window.__SESSION_ALERT_SHOWN__ = true;
                console.log("[ALERT] Carrito: Ten√©s que iniciar sesi√≥n.");
                alert("Ten√©s que iniciar sesi√≥n para agregar productos al carrito.");
              }
              showedAuthError = true;
              return;
            }
            cartId = data._id || (data.payload && data.payload._id);
            if (!cartId) {
              console.log("[ALERT] Carrito: No se pudo crear el carrito.");
              alert(data.message || "No se pudo crear el carrito.");
              return;
            }
            localStorage.setItem("cartId", cartId);
            console.log("[SUCCESS] Carrito creado con id:", cartId);
          }

          console.log("[FETCH] Agregando producto al carrito...", cartId, productId);
          const addResponse = await fetch(`/api/carts/${cartId}/product/${productId}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ quantity: 1 }),
            credentials: "include"
          });
          let result = {};
          try { result = await addResponse.json(); } catch {}

          if (
            addResponse.status === 401 ||
            (result.message && result.message.toLowerCase().includes("iniciar sesi√≥n"))
          ) {
            localStorage.removeItem("cartId");
            if (!showedAuthError && !window.__SESSION_ALERT_SHOWN__) {
              window.__SESSION_ALERT_SHOWN__ = true;
              console.log("[ALERT] Producto: Ten√©s que iniciar sesi√≥n.");
              alert("Ten√©s que iniciar sesi√≥n para agregar productos al carrito.");
            }
          } else if (addResponse.ok) {
            console.log("[ALERT] Producto: agregado con √©xito.");
            alert("‚úÖ Producto agregado al carrito con √©xito.");
          } else {
            console.log("[ALERT] Producto: error desconocido.", result.message);
            alert(result.message || "No se pudo agregar el producto.");
          }
        } catch (err) {
          console.error(err);
          alert("Hubo un problema al agregar el producto al carrito.");
        }
      });
    });
  </script>
</body>
</html>